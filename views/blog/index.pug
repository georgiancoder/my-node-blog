html(lang=lang)
  head
    title Blog
    script(src='https://www.googletagmanager.com/gtag/js?id=UA-107846956-1')
    script
        include inline.js
    meta(charset="utf-8")
    meta(name="description" content=(blogdata) ? blogdata.desc[lang] : sitelang.meta.desc[lang])
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
    meta(name="author" content="squad.ge")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en")
    link(rel="stylesheet" href="/css/material.grey-pink.min.css")
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel='apple-touch-icon', sizes='180x180', href='/images/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/images/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/images/favicon-16x16.png')
    link(rel='manifest', href='/images/manifest.json')
    link(rel='mask-icon', href='/images/safari-pinned-tab.svg', color='#5bbad5')
    meta(name='theme-color', content='#ffffff')
    meta(property="og:url" content=fb.url)
    meta(property="og:type" content="website")
    meta(property="og:title" content=(blogdata) ? blogdata.title[lang] : 'blog.cattaclub.com')
    meta(property="og:description" content=(blogdata) ? blogdata.desc[lang] : 'blog.cattaclub.com')
    meta(property="og:image" content=(blogdata) ? fb.originUrl + blogdata.mainpic : fb.originUrl + '/images/cattaclub-logo.png')
  body
    #fb-root
    script.
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=260220960753271";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header.mdl-layout__header--waterfall.portfolio-header
        .mdl-layout__header-row.portfolio-logo-row
          span.mdl-layout__title
            .portfolio-logo
            span.mdl-layout__title kitty
        .mdl-layout__header-row.portfolio-navigation-row.mdl-layout--large-screen-only
          nav.mdl-navigation.mdl-typography--body-1-force-preferred-font
            a(href='/' class=(page == 'home') ? "mdl-navigation__link is-active" : 'mdl-navigation__link') Blog
            a.mdl-navigation__link(href='') Categories
            a(href='/contact' class=(page == 'contact') ? "mdl-navigation__link is-active" : 'mdl-navigation__link') Contact
      .mdl-layout__drawer.mdl-layout--small-screen-only
        nav.mdl-navigation.mdl-typography--body-1-force-preferred-font
          a.mdl-navigation__link.is-active(href='/') Blog
          a.mdl-navigation__link(href='') Categories
          a.mdl-navigation__link(href='/contact') Contact
      main.mdl-layout__content
        a(href=langs.en) eng &nbsp;
        a(href=langs.ka) ka &nbsp;
        a(href=langs.ru) ru &nbsp;
        block content

    
        footer.mdl-mini-footer
          .mdl-mini-footer__left-section
          .mdl-logo Simple portfolio website
          .mdl-mini-footer__right-section
          ul.mdl-mini-footer__link-list
            li
              a(href='#') Help
            li
              a(href='#') Privacy & Terms
  script(src="https://code.getmdl.io/1.3.0/material.min.js")
  script(src='https://apis.google.com/js/platform.js', async='', defer='')
  script(type='text/javascript', async='', defer='', src='//assets.pinterest.com/js/pinit.js')
