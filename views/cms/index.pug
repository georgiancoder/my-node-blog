mixin getChildren(id, data)
  each dt in data
    if(dt.parentId == id)
      ol
        each d in data
          if(d.parentId == id)
            li(id="list_" + d.id)
              div=d.name
                span(data-id=d.id class='dellmenuitem') X
                +getChildren(d.id, data)

- function hasChildren(id, data){
  - var has = false;
  - for(i in data){
    - if(data[i].parentId == id){
      - has = true;
    - }
  - }
    - return has;
- }

